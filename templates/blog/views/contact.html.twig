<div class="container">
	<div class="row justify-content-center">
		<div class="col-lg-8 text-center">
			<h2 class="mt-0">Contact</h2>
			<hr class="divider my-4">
			<p class="text-muted mb-5">N'hestitez pas Ã  me contacter</p>
			<div id="message">
				{% for message in app.flashes('successMessage') %}
					<div class="alert alert-success">
						{{ message }}
					</div>
				{% endfor %}
			</div>
		</div>
		
		<div class="col-lg-8 text-center">
			<i class="fas fa-phone fa-3x mb-3 text-muted"></i>
			<div id="phoneNumber">{{ admin.phonenumber }} </div>
		</div>
	
		{% if not is_granted('ROLE_ADMIN') %}
			{% include 'blog/views/modal/message.html.twig' %}
    	{% else %}
			<div class="col-lg-8 mx-auto text-center">
				<a href="{{ path('fos_user_profile_edit') }}" class="btn btn-primary btn-xl">Modifier mes informations</a>
			</div>
		{% endif %}
	</div>
</div>