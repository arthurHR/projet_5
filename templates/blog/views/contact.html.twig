<div class="container">
	<div class="row justify-content-center">
		<div class="col-lg-8 text-center">
			<h2 class="mt-0">Contact</h2>
			<hr class="divider my-4">
			<p class="text-muted mb-5">N'hestitez pas Ã  me contacter</p>
			<div id="message">
				{% for message in app.flashes('successMessage') %}
					<div class="alert alert-success">
						{{ message }}
					</div>
				{% endfor %}
			</div>
		</div>
		<div class="col-lg-8 text-center">
			<i class="fas fa-phone fa-3x mb-3 text-muted"></i>
			<div id="phoneNumber">{{ data.user.phonenumber }} </div>
		</div>
		{% if is_granted("IS_AUTHENTICATED_REMEMBERED") and app.user == data.user.username %}
           <div class="col-lg-8 mx-auto text-center">
				<a href="{{ path('fos_user_profile_edit') }}" class="btn btn-primary btn-xl">Modifier mes informations</a>
			</div>
        {% else %}
           {% include 'blog/views/modal/message.html.twig' %}
        {% endif %}
	</div>
</div>