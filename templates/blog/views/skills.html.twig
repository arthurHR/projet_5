<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading">Comp√©tences</h2>
            <hr class="my-4">
        </div>
    </div>
</div>
<div class="container">
    <div class="row" id="skills"> 
        {% for skill in data['skills'] %}
            <div class="col-lg-3 col-md-6 text-center skill">
                <div class="service-box mt-5 mx-auto" >
                    <img class="img-fluid skillsImg"  src="{{ vich_uploader_asset(skill, 'imageFile') }}" alt="{{ skill.title }}" >
                    <h3 class="mb-3">{{ skill.title }}</h3>
                    {% if is_granted('ROLE_ADMIN') %}
                        <button class="btn btn-danger btn-lg"  onClick="DeleteSkill({{ skill.id }})">Supprimer</button>
                        <button class="btn btn-success btn-lg" onClick="UpdateSkill({{ skill.id }})">Modifier</button>
                    {% endif %}
                </div>
            </div>   
        {% endfor %}       
    </div>
    {% if is_granted('ROLE_ADMIN') %}
        {% include 'blog/views/modal/newSkill.html.twig' %}
        {% include 'blog/views/modal/changeSkill.html.twig' %}
    {% endif %}
</div>
 

