<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto text-center">
            <h2 class="section-heading text-white">A propos</h2>
            <hr class="light my-4">
            <div id="about">
                {% for about in data['about'] %}
                    <img class="img-thumbnail" alt="Porfil_Image" src="{{ vich_uploader_asset(about, 'imageFile') }}"
                        data-holder-rendered="true" style="vertical-align: middle;
                        width: 200px;
                        height: auto;
                        margin-bottom : 50px;
                        margin-top : 50px;">
                    <p class="text-faded mb-4">{{ about.description }}</p>
                {% endfor %}
            </div>
        </div>
    </div>
    {% if is_granted('ROLE_ADMIN') %}
        {% include 'blog/views/modal/changeAbout.html.twig' %}
    {% endif %}
</div>