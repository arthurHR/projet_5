<header class="masthead text-center text-white d-flex">
    <div class="container my-auto">
        <div id="header">
            <div class="row">
                {% for header in data['header'] %}
                    <div class="col-lg-10 mx-auto">
                        <h1 class="text-uppercase">
                            <strong>{{ header.title }}</strong>
                        </h1>
                        <hr>
                    </div>
                    <div class="col-lg-8 mx-auto">
                        <p class="text-faded mb-5">{{ header.subtitle }}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% if is_granted('ROLE_ADMIN') %}
        {% include 'blog/views/modal/changeHeader.html.twig' %}
    {% else %}
        <a class="btn btn-primary btn-xl js-scroll-trigger" href="#projectSection">Voir les projets</a>
    {% endif %}
    </div>
</header>