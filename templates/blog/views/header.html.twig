{# background-image: url("../img/header.jpg"); #}
<div id = "headerLoad">                
    {% for header in data['header'] %}
    <header id = "header" class="masthead text-center text-white d-flex" style="background-image : url({{ vich_uploader_asset(header, 'imageFile') }})">
        <div class="container my-auto">
            <div class="row">
                    <div class="col-lg-10 mx-auto">
                        <h1 class="text-uppercase">
                            <strong>{{ header.title }}</strong>
                        </h1>
                        <hr>
                    </div>
                    <div class="col-lg-8 mx-auto">
                        <p class="text-faded mb-5">{{ header.subtitle }}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </header>
</div>
 {% if is_granted("IS_AUTHENTICATED_REMEMBERED") and app.user == data.user.username %}
    {% include 'blog/views/modal/changeHeader.html.twig' %}
{% else %}
    <div class="col-lg-8 mx-auto text-center">
        <a id= "showProjects" class="btn btn-primary btn-xl js-scroll-trigger" href="#projectSection">Voir les projets</a>
    </div>
{% endif %}